#!/usr/bin/env python
import sys
import re
import io
import threading
import functools
import math
import serial
import rospy
import rosnode

from std_msgs.msg import Float64, Int32

def to_rpm(x):
    """Convert rad / sec to RPM"""
    return x * 60.0 / (2.0 * math.pi)

def to_rpm_per_sec(x):
    """Convert rad / sec**2 to RPM / s"""
    return x * 60.0 / (2.0 * math.pi)

def from_rpm(x):
    """Convert RPM to rad / sec"""
    return x / 60.0 * 2.0 * math.pi

